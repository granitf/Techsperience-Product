<% include partials/header %>

<div id="container">
    <br><br>
  <a href="/" class="btn btn-primary btn-lg active" role="button">Back to All Documents</a><br><br>

<form class="form-group" method="POST" action="/documents/add" style="border:1px solid #ccc" >
  <div class="container">
    <h1>Forma e Regjistrimit</h1>
    <p>Digjitalizimi i Dokumenteve</p>
    <br>

    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
            <label><b>Autori</b></label><br>
            <input type="text" placeholder="Emri i Autorit" name="author" class="form-control" required><br>
        </div>
        
    </div>
    
    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
            
        <label><b>Numri i Dokumeniti</b></label><br>
        <input type="text" placeholder="Shëno numrin e dokumeniti" name="nr" class="form-control" required><br>

        </div>
        
    </div>


    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
            <label><b>Titulli i Dokumentit</b></label><br>
    <input type="text" placeholder=" Shëno titullin e dokumentit" name="title" class="form-control" required><br>


        </div>
        
    </div>

    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
            <label><b>Lokacioni Fizik</b></label><br>
            <input type="text" placeholder="Vendi ku gjendet dokumenti" name="location"  class="form-control" required><br>      

        </div>
        
    </div>

    
    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
              <label><b>Përshkruaj  dokumentin</b></label><br>
              <textarea name="description" class="form-control"  rows="3" cols="50em" class="form-control" required></textarea><br>
        </div>
        
    </div>

    
    <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-8">
        <label><b>Image source</b></label><br>
        <input class="form-control" type="text" name="image" placeholder="Paste your image link here" required><br>

        </div>
        
    </div>
  

</div>

    <div class="clearfix">
      <button type="reset" class="btn btn-danger">Anulo</button>
      <button type="submit" class="btn btn-success">Regjistro Dokumentin</button>
    </div>
  

</form>


</div>

<% include partials/footer %>